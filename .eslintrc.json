{
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single",
            {
                "avoidEscape": true
            }
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "yoda": [
            "error",
            "always"
        ],
        "no-console": [
            1
        ]
    },
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "ignorePatterns": [
        "dist/*"
    ]
}